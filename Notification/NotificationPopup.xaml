<UserControl x:Class="Plasson.MachineTrackingApp.NotificationPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Plasson.MachineTrackingApp"
             mc:Ignorable="d" Height="82" Width="243">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom">
        <Border Background="LightGray" CornerRadius="5" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Message}" VerticalAlignment="Center" Margin="10"/>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
